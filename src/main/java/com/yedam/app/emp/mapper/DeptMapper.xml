<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yedam.app.emp.mapper.DeptMapper">
	<select id="deptList"
		resultType="com.yedam.app.emp.service.DeptVO">
		SELECT * FROM DEPARTMENTS
	</select>

	<select id="deptSelect" resultType="com.yedam.app.emp.service.DeptVO">
		SELECT * FROM DEPARTMENTS
		<where>
			<if test="departmentName != nuill and departmentName != ''">
				DEPARTMENT_NAME like '%${departmentName}%'
			</if>
			<if test="locationId != nuill and locationId != ''">
				AND LOCATION_ID in
				<foreach open="(" close=")" separator="," collection="deptArr" item="dept">
					#{locationId}
				</foreach>
			</if>
		</where>
	</select>
</mapper>